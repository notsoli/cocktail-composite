{
    "name": "flatten",
    "description": "polarizes values to either 0 or 1 based on a specified threshold (defaults to 0.5)",
    "locals": [ "res" ],
    "inputs": {
        "value": {
            "input_type": "display",
            "data_type": "f32",
            "default": "pos.x / res.x"
        },
        "cutoff": {
            "input_type": "number",
            "data_type": "float",
            "default": 0.5
        }
    },
    "outputs": {
        "flattened_value": {
            "data_type": "f32"
        }
    },
    "inline": "let $o{flattened_value} = step($i{cutoff}, $i{value});"
}