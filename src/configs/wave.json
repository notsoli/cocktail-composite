{
    "name": "wave",
    "description": "generates a value between 0 and a specified amplitude that oscillates over time",
    "globals": [ "frame" ],
    "inputs": {
        "amp": {
            "input_type": "number",
            "data_type": "float",
            "type": "f32",
            "default": 1
        },
        "freq": {
            "input_type": "number",
            "data_type": "float",
            "default": 1
        },
        "phase": {
            "input_type": "number",
            "data_type": "float",
            "default": 0
        },
        "offset": {
            "input_type": "number",
            "data_type": "float",
            "default": 0
        }
    },
    "outputs": {
        "value": {
            "data_type": "f32"
        }
    },
    "inline": "let $o{value} = (sin(frame / 30. * $i{freq} + $i{phase}) * 0.5 + 0.5) * $i{amp} + $i{offset};"
}